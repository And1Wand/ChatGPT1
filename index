<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Circle Dodge</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background: #111;
    }
    canvas {
      display: block;
    }
    #gameOver {
      position: absolute;
      top: 40%;
      width: 100%;
      text-align: center;
      font-size: 2em;
      color: white;
      font-family: sans-serif;
      display: none;
    }
  </style>
</head>
<body>
  <canvas id="game"></canvas>
  <div id="gameOver">Game Over<br><button onclick="location.reload()">Nochmal</button></div>

  <script>
    const canvas = document.getElementById("game");
    const ctx = canvas.getContext("2d");
    canvas.width = innerWidth;
    canvas.height = innerHeight;

    let player = { x: canvas.width / 2, y: canvas.height - 50, r: 15 };
    let enemies = [];
    let score = 0;
    let gameOver = false;

    function spawnEnemy() {
      const x = Math.random() * (canvas.width - 20) + 10;
      const r = 10 + Math.random() * 15;
      const speed = 1 + Math.random() * 3;
      enemies.push({ x, y: -r, r, speed });
    }

    function drawPlayer() {
      ctx.beginPath();
      ctx.arc(player.x, player.y, player.r, 0, Math.PI * 2);
      ctx.fillStyle = "#0f0";
      ctx.fill();
    }

    function drawEnemies() {
      for (let e of enemies) {
        ctx.beginPath();
        ctx.arc(e.x, e.y, e.r, 0, Math.PI * 2);
        ctx.fillStyle = "#f00";
        ctx.fill();
        e.y += e.speed;
      }
    }

    function checkCollision() {
      for (let e of enemies) {
        const dx = player.x - e.x;
        const dy = player.y - e.y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        if (dist < player.r + e.r) {
          gameOver = true;
          document.getElementById("gameOver").style.display = "block";
        }
      }
    }

    function drawScore() {
      ctx.fillStyle = "#fff";
      ctx.font = "20px sans-serif";
      ctx.fillText("Score: " + score, 10, 30);
    }

    canvas.addEventListener("mousemove", (e) => {
      player.x = e.clientX;
      player.y = e.clientY;
    });

    setInterval(spawnEnemy, 500);

    function animate() {
      if (gameOver) return;
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      drawPlayer();
      drawEnemies();
      checkCollision();
      drawScore();
      score++;
      requestAnimationFrame(animate);
    }

    animate();
  </script>
</body>
</html>
